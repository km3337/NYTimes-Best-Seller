<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/list_rank_num"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/pt_serif"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:textSize="17sp"
        android:textAlignment="center"
        tools:text="10" />

    <TextView
        android:id="@+id/list_rank_change"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:textSize="12sp"
        android:textAlignment="center"
        tools:text= "@string/up" />


    <TextView
        android:id="@+id/list_book_title"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_book_image"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="6dp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/pt_serif"
        android:textStyle="bold"
        android:textSize="17sp"
        tools:text="Book Title With Rank" />

    <TextView
        android:id="@+id/list_author"
        android:layout_width="293dp"
        android:layout_height="39dp"
        android:layout_below="@+id/list_book_title"
        android:layout_toRightOf="@id/list_rank_change"
        android:paddingLeft="12dp"
        android:textAlignment="viewStart"
        android:paddingTop="6dp"
        android:textStyle="italic"
        android:fontFamily="@font/pt_serif"
        android:textSize="14sp"
        tools:text="Giorno Giovanna" />

    <ImageView
        android:id="@+id/list_book_image"
        android:layout_width="79dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>